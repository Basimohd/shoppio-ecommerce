                                                                <span class="icon-large"><i
                                                                        class="ri-share-line"></i></span>
                                                                <span>Share</span>
                                                            </a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="description collapse">
                                                <ul>
                                                    <li class="has-child ">
                                                        <a href="#0" class="icon-small">Information</a>
                                                        <ul class="content">
                                                            <li><span>Category : </span><span>
                                                                    <%= product.category.categoryName %>
                                                                </span></li>
                                                            <li><span>Gender :</span><span> <%= product.gender %></span></li>
                                                        </ul>
                                                    </li>
                                                    <li class="has-child">
                                                        <a href="#0" class="icon-small">Details</a>
                                                        <div class="content">
                                                            <p>
                                                                <%= product.description %>
                                                            </p>

                                                        </div>
                                                    </li>
                                                    <li class="has-child">
                                                        <a href="#0" class="icon-small">Custom</a>
                                                        <div class="content">
                                                            <table>
                                                                <thead>
                                                                    <tr>
                                                                        <th>Size</th>
                                                                        <th>Bust <span class="mini-text">(cm)</span>
                                                                        </th>
                                                                        <th>Waist <span class="mini-text">(cm)</span>
                                                                        </th>
                                                                        <th>Hip <span class="mini-text">(cm)</span></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>XS</td>
                                                                        <td>82,5</td>
                                                                        <td>62</td>
                                                                        <td>87,5</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>S</td>
                                                                        <td>85</td>
                                                                        <td>63,5</td>
                                                                        <td>89</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>M</td>
                                                                        <td>87,5</td>
                                                                        <td>67,5</td>
                                                                        <td>93</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>L</td>
                                                                        <td>90</td>
                                                                        <td>72,5</td>
                                                                        <td>98</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>XL</td>
                                                                        <td>93</td>
                                                                        <td>77,5</td>
                                                                        <td>103</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </li>
                                                    <li class="has-child expand">
                                                        <a href="#" class="icon-small">Reviews<span
                                                                class="mini-text"><%= product.reviews.length %></span></a>
                                                        <div class="content">
                                                           
                                                            <div class="reviews" id="reviews">
                                                                <h4>Customers Reviews</h4>
                                                                <div class="review-block">
                                                                    <div class="review-block-head">
                                                                        <div class="flexitem">
                                                                            <span class="rate-sum"><%= reviewPercentage.toFixed(1) %></span>
                                                                            <span><%= product.reviews.length %> Reviews</span>
                                                                        </div>
                                                                        <a href="#review-form"
                                                                            class="secondary-button">Write review</a>
                                                                    </div>
                                                                    <div class="review-block-body">
                                                                        <ul>
                                                                            <% product.reviews.forEach((review,index)=>{ %>
                                                                                <li class="item">
                                                                                    <div class="review-form">
                                                                                        <p class="person">
                                                                                            <%= review.name %>
                                                                                        </p>
                                                                                        <% let timestamp = new Date(review.postedOn) %>
                                                                                        <p class="mini-text">On <%= timestamp.toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' }) %>
                                                                                        </p>
                                                                                    </div>
                                                                                    <div class="review-rating rating">
                                                                                        <div class="stars">
                                                                                            <span class="fa fa-star <% if (review.starCount >= 1) { %>checked<% } %>"></span>
                                                                                            <span class="fa fa-star <% if (review.starCount >= 2) { %>checked<% } %>"></span>
                                                                                            <span class="fa fa-star <% if (review.starCount >= 3) { %>checked<% } %>"></span>
                                                                                            <span class="fa fa-star <% if (review.starCount >= 4) { %>checked<% } %>"></span>
                                                                                            <span class="fa fa-star <% if (review.starCount >= 5) { %>checked<% } %>"></span>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="review-title">
                                                                                        <p>
                                                                                            <%= review.title %>
                                                                                        </p>
                                                                                    </div>
                                                                                    <div class="review-text">
                                                                                        <p>
                                                                                            <%= review.review %>
                                                                                        </p>
                                                                                    </div>
                                                                                </li>
                                                                                <% }) %>

                                                                        </ul>
                                                                        <div class="second-links" style="margin-top: 15px;">
                                                                            <a href="#" class="view-all">View all
                                                                                reviews <i
                                                                                    class="ri-arrow-right-line"></i></a>
                                                                        </div>
                                                                    </div>
                                                                     
                                                                    <div class="review-form" id="review-form">
                                                                        <h4>Write a review</h4>
                                                                        <form id="reviewForm">
                                                                            <div class="rating">

                                                                                <p>Are you satisfied enough?</p>
                                                                                <div style="margin-top: -15px;"
                                                                                    class="rate-this">
                                                                                    <input type="radio" name="rating"
                                                                                        value="5" id="star5">
                                                                                    <label for="star5"><i
                                                                                            class="ri-star-fill"></i></label>

                                                                                    <input type="radio" name="rating"
                                                                                        value="4" id="star4">
                                                                                    <label for="star4"><i
                                                                                            class="ri-star-fill"></i></label>

                                                                                    <input type="radio" name="rating"
                                                                                        value="3" id="star3">
                                                                                    <label for="star3"><i
                                                                                            class="ri-star-fill"></i></label>

                                                                                    <input type="radio" name="rating"
                                                                                        value="2" id="star2">
                                                                                    <label for="star2"><i
                                                                                            class="ri-star-fill"></i></label>

                                                                                    <input type="radio" name="rating"
                                                                                        value="1" id="star1">
                                                                                    <label for="star1"><i
                                                                                            class="ri-star-fill"></i></label>

                                                                                </div>
                                                                            </div>

                                                                            <input type="text" hidden
                                                                                value="<%= product._id %>"
                                                                                name="productId" id="productId">

                                                                            <p>
                                                                                <label>Title</label>
                                                                                <input type="text" name="title"
                                                                                    id="reviewTitle">
                                                                            </p>
                                                                            <p>
                                                                                <label>Review</label>
                                                                                <textarea cols="30" rows="10"
                                                                                    name="review"
                                                                                    id="reviewDes"></textarea>
                                                                            </p>
                                                                            <p><button onclick="addReview(event)"
                                                                                    class="primary-button"
                                                                                    style="border: none; cursor: pointer;">Submit
                                                                                    Review</button></p>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <div class="features">
        <div class="container">
            <div class="wrapper">
                <div class="column">
                    <div class="sectop flexitem">
                        <h2><span class="circle"></span><span>Related products</span></h2>
                        <div class="second-links">
                            <a href="#" class="view-all">View all<i class="ri-arrow-right-line"></i></a>
                        </div>
                    </div>
                    <div class="products main flexwrap">
                        <% relatedProduct.forEach((product)=>{ %>
                            <div class="item">
                                <div class="media">
                                    <div class="thumbnail object-cover">
                                        <a href="/product?id=<%= product._id %>">
                                            <img src="/productImage/<%= product.image[0] %>" alt="">
                                        </a>
                                    </div>
                                    <div class="hoverable">
                                        <ul>
                                            <% if(typeof wishlistProduct !="undefined" ){ %>
                                                <% if(wishlistProduct !=null){ %>
                                                    <li
                                                        class="active  <% if (wishlistProduct.products.some(item => item.productId.toString() == product._id.toString())) { %>actived<% }%>">
                                                        <a href="#"><i class="ri-heart-line"></i></a>
                                                    </li>
                                                    <% }else{ %>
                                                        <li class="active"><a href="#"><i class="ri-heart-line"></i></a>
                                                        </li>
                                                        <% } %>
                                                            <% }else{ %>
                                                                <li class="active"><a href="#"><i
                                                                            class="ri-heart-line"></i></a></li>
                                                                <% } %>

                                                                    <li><a href="/product?id=<%= product._id %>"><i
                                                                                class="ri-eye-line"></i></a></li>
                                                                    <li><a href="#"><i class="ri-shuffle-line"></i></a>
                                                                    </li>
                                        </ul>
                                    </div>
                                    <div class="discount circle flexcenter">
                                        <% const offerPercentage=((product.MRP - product.salePrice) / product.MRP) *
                                            100; %>
                                            <span>
                                                <%= offerPercentage.toFixed(0) %>%
                                            </span>
                                    </div>
                                </div>
                                <div class="content">
                                    <div class="rating">
                                        <div class="stars"></div>
                                        <span class="mini-text">(0)</span>
                                    </div>
                                    <h3><a href="/product?id=<%= product._id %>">
                                            <%= product.productName %>
                                        </a></h3>
                                    <div class="price">
                                        <span class="current">₹<%= product.salePrice %></span>
                                        <span class="normal mini-text">₹<%= product.MRP %></span>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
