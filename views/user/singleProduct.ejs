    <script>
        // Initiate zoom effect:
        imageZoom("0", "myresult");

        function addWishlist(e) {
            e.preventDefault();
            var link = $('#addWishlist').attr('href');
            $.ajax({
                type: "GET",
                url: link,
                success: function (response) {
                    if (response.success) {
                        const icon = document.getElementById("wishlistIcon");
                        icon.classList.remove("ri-heart-line");
                        icon.classList.add("ri-heart-fill");
                        icon.style.color = "#ff6b6b";
                        document.getElementById("wishlistText").innerHTML = "wishlisted"
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 2200,
                            timerProgressBar: true,
                            didOpen: (toast) => {
                                toast.addEventListener('mouseenter', Swal.stopTimer)
                                toast.addEventListener('mouseleave', Swal.resumeTimer)
                            }
                        })
                        Toast.fire({
                            icon: 'success',
                            title: 'Added to Wishlist'
                        })
                    } else {
                        const icon = document.getElementById("wishlistIcon");
                        icon.classList.remove("ri-heart-fill");
                        icon.classList.add("ri-heart-line");
                        icon.style.color = "black";
                        document.getElementById("wishlistText").innerHTML = "wishlist"
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 2200,
                            timerProgressBar: true,
                            didOpen: (toast) => {
                                toast.addEventListener('mouseenter', Swal.stopTimer)
                                toast.addEventListener('mouseleave', Swal.resumeTimer)
                            }
                        })
                        Toast.fire({
                            icon: 'error',
                            title: 'Removed from Wishlist'
                        })
                    }
                }
            })
        }

    </script>
    <script>
        function addReview(event) {
            console.log("reviewForm")
            event.preventDefault();
            const rating = document.querySelector('input[name="rating"]:checked').value;
            const review = document.getElementById("reviewDes").value;
            const title = document.getElementById("reviewTitle").value;
            const productId = document.getElementById("productId").value;
            $.ajax({
                type: "POST",
                url: '/product?id=' + productId,
                data: {
                    rating: rating,
                    productId: productId,
                    review: review,
                    title: title
                },
                success: function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        if (res.userLoggedIn) {
                            location.href = '/login'
                        } else {
                            const Toast = Swal.mixin({
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 2200,
                                timerProgressBar: true,
                                didOpen: (toast) => {
                                    toast.addEventListener('mouseenter', Swal.stopTimer)
                                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                                }
                            })
                            Toast.fire({
                                icon: 'error',
                                title: 'You can only add review after Purchase'
                            })
                        }
                    }
                }
            })
        }

    </script>

