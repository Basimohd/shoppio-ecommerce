                                            <div class="swiper-button-prev"></div>
                                        </div>

                                        <div thumbSlider="" class="small-image">

                                            <ul class="small-image-wrapper flexitem swiper-wrapper">
                                                <% product.image.forEach((image)=>{ %>
                                                    <li class="thumbnail-show swiper-slide">
                                                        <img src="/productImage/<%= image %>" alt="">
                                                    </li>
                                                    <% }) %>
                                            </ul>

                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="img-zoom-container-div is_sticky">
                                        <div id="myresult" class="img-zoom-result"></div>
                                    </div>
                                    <div class="item">

                                        <h1>
                                            <%= product.productName %>
                                        </h1>
                                        <div class="content">
                                            <div class="rating">
                                                <div class="shop-stars">
                                                    <span class="fa fa-star <% if (reviewPercentage >= 1) { %>checked<% } %>"></span>
                                                    <span class="fa fa-star <% if (reviewPercentage >= 2) { %>checked<% } %>"></span>
                                                    <span class="fa fa-star <% if (reviewPercentage >= 3) { %>checked<% } %>"></span>
                                                    <span class="fa fa-star <% if (reviewPercentage >= 4) { %>checked<% } %>"></span>
                                                    <span class="fa fa-star <% if (reviewPercentage >= 5) { %>checked<% } %>"></span>
                                                                                
                                                </div>
                                                <a href="#reviews" class="mini-text"><%= product.reviews.length %> reviews</a>
                                                <a href="#review-form" class="add-review mini-text">Add Your Review</a>
                                            </div>
                                            <div class="stock-sku">
                                                <% if(product.stock==0){ %>
                                                    <span class="available" style="color: red;">Out of Stock</span>
                                                    <% }else{ %>
                                                        <span class="available">In Stock</span>
                                                        <% } %>
