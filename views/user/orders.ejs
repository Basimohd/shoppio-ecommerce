                        <div class="sidebar__item"><a href="/address">Address</a></div>
                        <div class="sidebar__item"><a class="active" href="#">Orders</a></div>

                    </div>
                    <hr class="hr-side">
                    <div class="content">
                        <div class="content__header">
                            <h2>Orders</h2>
                        </div>
                            <% orderData.forEach((order)=>{%>
                                <div class="address__form">
                                    <div class="order_top" style="display: flex;">
                                        <div class="status_icon">
                                            <div style="width: 45px; height: 45px; border-radius: 50%; background-color: rgb(233 233 233); text-align: center; display: grid; place-items: center;;">
                                                <% if(order.status == "Placed"){ %>
                                                    <i style="font-size: 26px; color:green " class="ri-check-fill"></i>
                                                    <% }else if(order.status == "Shipped"){ %>
                                                        <i style="font-size: 26px;  color:green " class="ri-send-plane-fill"></i>
                                                        <% }else if(order.status == "Out For Delivery"){ %>
                                                            <i style="font-size: 26px;  color:green " class="ri-bus-2-fill"></i>
                                                            <% }else if(order.status == "Cancelled"){ %>
                                                                <i style="font-size: 26px; color:rgb(63, 63, 63)" class="ri-close-fill"></i>
                                                            <% }else{ %>
                                                                <i style="font-size: 26px; color:green " class="ri-check-double-fill"></i>
                                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="status" style="font-size: 16px; margin-left: 10px;">
                                            <p style="font-weight: 500;" class="<%= order.status === "Placed" || order.status === "Shipped" || order.status === "Out Of Delivery" || order.status === "Delivered" ? 'text-success' : '' %>"><%= order.status%></p>
                                            <p style="font-size: 14px;"  class="<%= order.status === "Placed" || order.status === "Shipped" || order.status === "Out Of Delivery" || order.status === "Delivered" ? 'text-success' : '' %>">on <%= order.statusUpdated.toISOString().slice(0, 10) %></p>
                                        </div>
                                        <div class="order_id" style="margin-left: auto;">
                                            <p>Order ID : #<%= order._id%></p>
                                        </div>
                                    </div>
                                    <div class="order_bottom" style="display: flex; margin-top: 10px;">
                                        <div class="status" style="font-size: 16px; margin-left: 10px; margin-top:auto">
                                            <% order.productDatas.forEach((product)=>{ %>
                                            <p style="text-transform: capitalize; font-family:Poppins; "><%= product.productId.productName%> x2</p>
                                            <% }) %>
                                        </div>
                                        <div class="order_id" style="margin-left: auto; text-align: right; margin-top: auto;">
                                            <p style="font-size: 18px; font-weight: 500;">Total Price:₹<%= order.cartTotal%></p>
                                            <% if(order.status === "Placed" || order.status === "Shipped" || order.status === "Out Of Delivery"){ %>
                                            <a href="/cancelOrder?id=<%= order._id %>" style="color: #e70000; cursor:pointer;">Cancel</a>
                                            <span style="margin-left: 5px; margin-right: 5px; cursor: default;"> | </span>
                                            <% } %>
                                            <% if(order.status === "Delivered"){ %>
                                                <a href="/returnRequest?id=<%= order._id %>" style="color: #e70000; cursor:pointer;">Return</a>
                                                <span style="margin-left: 5px; margin-right: 5px; cursor: default;"> | </span>
                                                <% } %>
                                            <a href="/orderTrack?id=<%= order._id %>" style="color: #794afa; cursor:pointer; ">Track</a>
                                        </div>
                                    </div>
                                </div>
                                <%})%>
                            
                    </div>
                </div>
            </div>
