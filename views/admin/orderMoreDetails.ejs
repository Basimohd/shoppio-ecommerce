      <div class="main-panel">
        <div class="content-wrapper">
            <h3 class="font-weight-bold ml-3 mb-3">Order ID<span class="text-primary"> #<%= orderData._id %></span></h3>
            <div class="row">
          <div class="col-lg-7 grid-margin ">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Order Details</h4>
                
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>SKU</th>
                        <th>Product</th>
                        <th>QTY</th>
                        <th>Price</th>
                        <th>Total Price</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% productData.forEach((product)=>{ %>
                      <tr>
                        <td><%= product.productId.SKU %></td>
                        <td><%= product.productId.productName %></td>
                        <td>×<%= product.quantity %></td>
                        <td>₹<%= product.price %></td>
                        <td>₹<%= Number(product.quantity)*Number(product.price) %></td>
                      </tr>
                      <% }) %>
                      
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="card mt-4">
                <div class="card-body">
                  <h4 class="card-title">Customer and Order Details</h4>
                  
                  <div class="table-responsive">
                    <table class="table table-hover justify-content-between">
                      <tbody>
                        <tr>
                          <td class="font-weight-bold">Customer Name</td>
                          <td class="text-right"><%= userData.name %></td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Phone Number</td>
                            <td class="text-right"><%= userData.mobile %></td>
                          </tr>
                          <tr>
                            <td class="font-weight-bold">Order Status</td>
                            <td class="text-right">
                              <% if(orderData.status == "Cancelled"){%>
                                <label class="badge badge-secondary text-white">Cancelled</label>
                                <%}else if(orderData.status == "Returning" ){%>
                                  <label class="badge badge-info text-white">Return Requested</label>
                                <%}else if(orderData.status == "Delivered" ){%>
                                  <label class="badge badge-success text-white">Delivered</label>
                                <%}else if(orderData.status == "Returned" ){%>
                                  <label class="badge badge-info text-white">Returned</label>
                                <%}else{%>
                                  <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuSizeButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <%= orderData.status %>
                                  </button>
                                  <div class="dropdown-menu text-white" aria-labelledby="dropdownMenuSizeButton3">
                                    <% if(orderData.status == "Placed"){ %>
                                      <a onclick="orderConfirmation(event,'Shipped','<%= orderData._id %>Shipped')" id="<%= orderData._id %>Shipped" class="dropdown-item" href="/admin/changeOrderStatus?id=<%= orderData._id %>&status=Shipped&page=orders">Shipped</a>
                                      <a onclick="orderConfirmation(event,'Out of delivery','<%= orderData._id %>Out of delivery')" id="<%= orderData._id %>Out of delivery" class="dropdown-item " href="/admin/changeOrderStatus?id=<%= orderData._id %>&status=Out Of Delivery&page=orders">Out Of Delivery</a>
                                      <a onclick="orderConfirmation(event, 'Delivered','<%= orderData._id %>Delivered')" id="<%= orderData._id %>Delivered" class="dropdown-item "href="/admin/changeOrderStatus?id=<%= orderData._id %>&status=Delivered&page=orders">Delivered</a>
                          
                                      <% }else if(orderData.status == "Shipped"){ %>
                                     <a onclick="orderConfirmation(event,'Out of delivery','<%= orderData._id %>Out of delivery')" id="<%= orderData._id %>Out of delivery" class="dropdown-item " href="/admin/changeOrderStatus?id=<%= orderData._id %>&status=Out Of Delivery&page=orders">Out Of Delivery</a>
                                    <a onclick="orderConfirmation(event, 'Delivered','<%= orderData._id %>Delivered')" id="<%= orderData._id %>Delivered" class="dropdown-item "href="/admin/changeOrderStatus?id=<%= orderData._id %>&status=Delivered&page=orders">Delivered</a>
                                
                                        <% }else if(orderData.status == "Out Of Delivery"){ %>
                                    <a onclick="orderConfirmation(event, 'Delivered','<%= orderData._id %>Delivered')" id="<%= orderData._id %>Delivered" class="dropdown-item "href="/admin/changeOrderStatus?id=<%= orderData._id %>&status=Delivered&page=orders">Delivered</a>
                                
                                        <% }%>
                                    </div>
                                  <%}%></td>
                          </tr>
                          <tr>
                            <td class="font-weight-bold">Payment Method</td>
                            <td class="text-right"><%= orderData.paymentMethod %></td>
                          </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
                
              </div>
              <% if(orderData.status == "Returning"){ %>
                <div class="card mt-4">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                            <p class="font-weight-bold">Return Requested : </p>
                            
                            <div>
                              <a href="/admin/acceptReturn?id=<%= orderData._id %>" class="btn btn-sm btn-success mr-2">Accept</a>
                            
                            </div>
                    </div>
                            <% if(orderData.returnReason){ %>
                              
                              <p>Reason : <%= orderData.returnReason %> </p>
                              <% } %>
                  </div>
                </div>
                <% } %>
          </div>
          <div class="col-lg-5">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Order summary</h4>
              
              <div class="table-responsive">
                <table class="table borderless ">
                  <tbody>
                    <tr class="mb-5">
                      <td class="font-weight-bold">Order Created</td>
                      <td class="text-right"><%= orderData.date.toISOString().slice(0, 10) %></td>
                    </tr>
                    <tr class="mb-5">
                        <td class="font-weight-bold">Subtotal Price</td>
                        <td class="text-right">₹<%= Number(orderData.cartTotal).toFixed(2) %></td>
                      </tr>
                      <tr class="mb-5">
                        <td class="font-weight-bold">Coupon Offer</td>
                        <td class="text-right">-₹<%= (orderData.couponDiscount).toFixed(2) %></td>
                      </tr>
                      <tr class="mb-5">
                        <td class="font-weight-bold">Discount</td>
                        <td class="text-right">00.00</td>
                      </tr>
                      <tr class="mb-5">
                        <td class="font-weight-bold">Total Price</td>
                        <td class="text-right" style="font-size: 1.5rem;"><strong>₹<%= (Number(orderData.cartTotal)-Number(orderData.couponDiscount)).toFixed(2) %></strong></td>
                      </tr>
                  </tbody>
                </table>
              </div>
              
            </div>
          </div>
          <div class="card mt-3">
            <div class="card-body">
              <h4 class="card-title">Delivery Address</h4>
              
              <p><span class="font-weight-bold">Address line : </span><%= address.address %></p>
              <p><span class="font-weight-bold">Locality : </span><%= address.locality %></p>
              <p><span class="font-weight-bold">Pincode : </span><%= address.pincode %></p>
              <p><span class="font-weight-bold">City: </span><%= address.city %></p>
              <p><span class="font-weight-bold">District,State: </span><%= address.district %>,<%= address.state %></p>
            </div>
          </div>
          
    </div>
    
            </div>
