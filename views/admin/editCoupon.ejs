      <div class="main-panel">
        <div class="content-wrapper">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Edit Coupon</h4>
                <form class="form-sample" method="post" action="" id="couponForm">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Coupon Code</label>
                        <div class="col-sm-9">
                          <input name="code" value="<%= coupon.code %>" type="text" class="form-control" />
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Type</label>
                          <div class="col-sm-4">
                            <div class="form-check">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="type" id="membershipRadios1" value="Flat" <%= coupon.type === "Flat" ? "checked" : "" %>>
                                Flat
                              </label>
                            </div>
                          </div>
                          <div class="col-sm-5">
                            <div class="form-check">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="type" id="membershipRadios2" value="Percentage" <%= coupon.type === "Percentage" ? "checked" : "" %>>
                                Percentage
                              </label>
                            </div>
                          </div>
                        </div>
                      </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Value</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" value="<%= coupon.value %>" name="value"/>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Min Order</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" value="<%= coupon.minOrder %>" name="minOrder"/>
                        </div>
                      </div>
                    </div>
                      
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Max Discount</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control"  value="<%= coupon.maxDiscount %>" name="maxDiscount"/>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Total Usage</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" value="<%= coupon.totalUsage %>" name="totalUsage"/>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">
                    
                    <div class="col-md-6">
                      <div class="form-group row">
